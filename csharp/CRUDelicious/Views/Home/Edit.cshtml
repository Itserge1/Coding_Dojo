@model Dish

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <form action="/updateDish/@Model.DishId" method="post" style="width: 400px;">
    <a asp-action="Index">Home</a>
    <h1>Edit Your Dish</h1>
        <div class="mb-3">
            <label for="chefName" class="form-label">Chef's Name</label>
            <input asp-for="ChefName" class="form-control" id="chefName" aria-describedby="emailHelp">
            <span asp-validation-for="ChefName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Name" class="form-label">Name of Dish</label>
            <input asp-for="Name" class="form-control"  aria-describedby="emailHelp" id="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Calories" class="form-label">Calories</label>
            <input asp-for="Calories" class="form-control" id="Calories" aria-describedby="emailHelp" id="Calories">
            <span asp-validation-for="Calories" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Tastiness" class="form-label">Tastiness</label><br>
            <select asp-for="Tastiness" class="form-select" aria-label="Default select example" id="Tastiness" style="width: 400px;">
                <option selected>Open this select menu</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="Tastiness" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <label for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" placeholder="Leave a description here" id="Description"
                style="height: 100px"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-4">Edit Dish</button>
    </form>
</body>

</html>